@model EditProfileDTO
@inject AppController<FilesController> fileController
@inject AppController<AccountController> accountController
@{
    ViewData["Title"] = "EditProfile";
}

@functions {
    public string GetUrlActionEditProfile()
    {
        return accountController.GetActionUrl(nameof(AccountController.EditProfile));
        // return accountController.CallAction(c => c.EditProfile());
    }
    public string GetSrcProfilePicture(string profilePicturePath)
    {
        return fileController.CallAction(c => c.DownloadFile(profilePicturePath));
    }
    public string GetUrlPageChangePassword()
    {
        // return accountController.GetActionUrl(nameof(AccountController.ChangePassword));
        return accountController.CallAction(c => c.ChangePassword(null));
    }
}

