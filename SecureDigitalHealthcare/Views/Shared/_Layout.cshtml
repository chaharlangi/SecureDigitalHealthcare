@using SecureDigitalHealthcare.Utilities
@using SecureDigitalHealthcare.Controllers
@inject SecureDigitalHealthcare.Utilities.AppController<AccountController> accountController
@inject SecureDigitalHealthcare.Utilities.AppController<AdminDoctorController> adminDoctorController
@inject SecureDigitalHealthcare.Utilities.AppController<AppointmentsController> appointmentsController

@functions {
    private string GetLogoutUrl()
    {
        return accountController.CallAction(c => c.Logout());
    }
    private string GetHrefAdminDoctorIndex()
    {
        return adminDoctorController.CallAction(c => c.Index());
    }
    private string GetHrefPatientAppointments()
    {
        return appointmentsController.CallAction(c => c.GetPatientAppointments());
    }
    private string GetHrefDoctorAppointments()
    {
        return appointmentsController.CallAction(c => c.GetDoctorAppointments());
    }

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureDigitalHealthcare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SecureDigitalHealthcare.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SecureDigitalHealthcare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Dashboard</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-success" href="https://github.com/chaharlangi/SecureDigitalHealthcare" target="_blank">Github Repository</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav   me-5">
                        @if (User.Identity.IsAuthenticated)
                        {
                            string welcomeMessage = "";

                            if (AppAuthentication.IsDoctor(Context))
                            {
                                welcomeMessage = $"Hi Doctor {User.Identity.Name}";

                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="Doctors" asp-action="GetDoctorAvailabilites" target="_self">Availabilities</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-success" href="@GetHrefDoctorAppointments()" target="_self">Upcoming Appointments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-controller="Account" asp-action="EditProfile" target="_self">Edit Profile</a>
                                </li>
                            }
                            else if (AppAuthentication.IsPatient(Context))
                            {
                                welcomeMessage = $"Hi {User.Identity.Name}";

                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="Doctors" asp-action="GetAllDoctors" target="_self">Book Appointment</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-success" href="@GetHrefPatientAppointments()" target="_self">Upcoming Appointments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-controller="Account" asp-action="EditProfile" target="_self">Edit Profile</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-success" href="@GetHrefAdminDoctorIndex()" target="_self">Doctors</a>
                                </li>
                                welcomeMessage = $"ADMIN PANEL";
                            }

                            <li class="nav-item">
                                <span class="nav-link text-dark">@welcomeMessage</span>
                            </li>

                            <li class="nav-item">
                                @{

                                    var hrefLogout = accountController.CallAction(c => c.Logout());
                                }
                                <a class="nav-link text-danger" href="@hrefLogout" target="_self">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-controller="Account" asp-action="Login" target="_self">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Account" asp-action="Signup" target="_self">Sign up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SecureDigitalHealthcare @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
