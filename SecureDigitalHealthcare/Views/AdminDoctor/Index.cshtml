@using Microsoft.AspNetCore.Mvc.Routing
@using SecureDigitalHealthcare.Controllers
@using SecureDigitalHealthcare.Utilities
@model IEnumerable<SecureDigitalHealthcare.Models.Doctor>
@inject AppController<FilesController> fileController
@inject AppController<AccountController> accountController

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    string defaultImageValue = @GetSrcProfilePicture("Default.jpg");
}
@functions {
    public string GetSrcProfilePicture(string profilePicturePath)
    {
        return fileController.CallAction(c => c.DownloadFile(profilePicturePath));
    }
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Speciality
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="align-content-center">
                    <img class="rounded-circle" id="profilePictureImg" src="@GetSrcProfilePicture(item.IdNavigation.ProfileImagePath)"
                         alt="No image"
                         width="60"
                         height="60" />
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.IdNavigation.Id)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.IdNavigation.Name)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.IdNavigation.LastName)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.Speciality.Name)
                </td>
                <td class="align-content-center">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
